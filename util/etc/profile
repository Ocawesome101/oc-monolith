set LS_COLORS='dir=94:exec=92:file=97'

alias reboot='shutdown -r'
alias poweroff='shutdown -P'
alias logout='exit'
alias ll='ls -l'
alias la='ls -a'
alias lh='ls -lh'
alias edit='$EDITOR'
alias dir='ls -lh --nocolor'
alias help='less /etc/intro.txt'
